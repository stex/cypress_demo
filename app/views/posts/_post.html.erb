<div class="col">
  <div class="card">
    <div class="card-header d-flex justify-content-between">
      <span><%= post.title %></span>
      <small class="text-muted"><%= post.account.email %></small>
    </div>
    <div class="card-body">
      <%= simple_format post.content %>
    </div>
    <div class="card-footer">
      <%= turbo_frame_tag dom_id(post, :comments), src: [post, :comments] %>
    </div>
  </div>
</div>
